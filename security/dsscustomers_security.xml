<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <data>
        <record id="module_category_dsscustomers" model="ir.module.category">
            <field name="name">DSS Customers</field>
            <field name="description">Allows to handle dsscustomers related stuff.</field>
            <field name="sequence">8</field>
        </record>
        <record id="group_dsscustomers_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_dsscustomers" />            
        </record>
        <record id="group_dsscustomers_sale_user" model="res.groups">
            <field name="name">User/Sale</field>
            <field name="category_id" ref="module_category_dsscustomers" />
            <field name="implied_ids" eval="[(4, ref('dsscustomers.group_dsscustomers_user'))]" />
        </record>
         <record id="group_dsscustomers_sale_leader" model="res.groups">
            <field name="name">Leader/Sale</field>
            <field name="category_id" ref="module_category_dsscustomers" />
            <field name="implied_ids" eval="[(4, ref('dsscustomers.group_dsscustomers_sale_user'))]" />
        </record>
        <record id="group_dsscustomers_daotao_user" model="res.groups">
            <field name="name">User/Đào tạo</field>
            <field name="category_id" ref="module_category_dsscustomers" />
            <field name="implied_ids" eval="[(4, ref('dsscustomers.group_dsscustomers_user'))]" />
        </record>
        <record id="group_dsscustomers_ketoan_user" model="res.groups">
            <field name="name">User/Kế toán</field>
            <field name="category_id" ref="module_category_dsscustomers" />
            <field name="implied_ids" eval="[(4, ref('dsscustomers.group_dsscustomers_user'))]" />
        </record>
           <record id="group_dsscustomers_ketoan_leader" model="res.groups">
            <field name="name">Leader/Kế toán</field>
            <field name="category_id" ref="module_category_dsscustomers" />
            <field name="implied_ids" eval="[(4, ref('dsscustomers.group_dsscustomers_ketoan_user'))]" />
        </record>
         <record id="group_dsscustomers_processing_user" model="res.groups">
            <field name="name">User/processing</field>
            <field name="category_id" ref="module_category_dsscustomers" />
            <field name="implied_ids" eval="[(4, ref('dsscustomers.group_dsscustomers_user'))]" />
        </record>
        <record id="group_dsscustomers_cs_user" model="res.groups">
            <field name="name">CS/User</field>
            <field name="category_id" ref="module_category_dsscustomers" />
            <field name="implied_ids" eval="[(4, ref('group_dsscustomers_ketoan_user')),(4, ref('group_dsscustomers_sale_user'))]" />
        </record>
         <record id="group_dsscustomers_cs_leader" model="res.groups">
            <field name="name">CS/Leader</field>
            <field name="category_id" ref="module_category_dsscustomers" />
            <field name="implied_ids" eval="[(4, ref('group_dsscustomers_cs_user'))]" />
        </record>
        <record id="group_dsscustomers_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_dsscustomers" />
            <field name="implied_ids" eval="[(4, ref('dsscustomers.group_dsscustomers_user'))]" />
        </record>
        <!-- <record id="base.user_admin" model="res.users">
            <field name="groups_id" eval="[(4, ref('group_dsscustomers_manager'))]" />
        </record>
        <record id="base.group_system" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('group_dsscustomers_manager'))]" />
        </record> -->
    </data>
 <data noupdate="1">
        <record id="rule_dss_dsscustomers_user" model="ir.rule">
            <field name="name">DSS customers user</field>
            <field name="model_id" ref="model_dsscustomers_dsscustomers"/>
            <field name="groups" eval="[(4, ref('dsscustomers.group_dsscustomers_user'))]"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
        </record>

        <record id="rule_dss_dsscustomers_user_sale" model="ir.rule">
            <field name="name">DSS customers user/Sale</field>
            <field name="model_id" ref="model_dsscustomers_dsscustomers"/>
            <field name="groups" eval="[(4, ref('dsscustomers.group_dsscustomers_sale_user'))]"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
        </record>
          <record id="rule_dss_dsscustomers_user_sale_leader" model="ir.rule">
            <field name="name">DSS customers Leader/Sale</field>
            <field name="model_id" ref="model_dsscustomers_dsscustomers"/>
            <field name="groups" eval="[(4, ref('dsscustomers.group_dsscustomers_sale_leader'))]"/>
            <field name="domain_force">['|',('user_id','=',user.id),('teamphutrach','in',[user.department_id.id])]</field>
        </record>
         <record id="rule_dss_dsscustomers_user_ketoan" model="ir.rule">
            <field name="name">Ruler DSS ke toan</field>
            <field name="model_id" ref="model_dsscustomers_ketoan"/>
            <field name="groups" eval="[(4, ref('dsscustomers.group_dsscustomers_ketoan_user'))]" />
            <field name="domain_force">[('user_id','=',user.id)]</field>
            
        </record>
        <record id="rule_dss_dsscustomers_user_ketoan_leader" model="ir.rule">
            <field name="name">Ruler DSS ke toan/Leader</field>
            <field name="model_id" ref="model_dsscustomers_ketoan"/>
            <field name="groups" eval="[(4, ref('dsscustomers.group_dsscustomers_ketoan_leader'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
        <record id="rule_dss_dsscustomers_user_cs" model="ir.rule">
            <field name="name">Ruler DSS CS/User</field>
            <field name="model_id" ref="model_dsscustomers_dsscustomers"/>
            <field name="groups" eval="[(4, ref('dsscustomers.group_dsscustomers_cs_user'))]" />
            <field name="domain_force">[('usercs_id','=',user.id)]</field>
        </record>   
        <record id="rule_dss_dsscustomers_leader_cs" model="ir.rule">
            <field name="name">Ruler DSS CS/Leader</field>
            <field name="model_id" ref="model_dsscustomers_dsscustomers"/>
            <field name="groups" eval="[(4, ref('dsscustomers.group_dsscustomers_cs_leader'))]" />
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
        <record id="rule_dss_dsscustomers_user_processing" model="ir.rule">
            <field name="name">Ruler DSS processing</field>
            <field name="model_id" ref="model_dsscustomers_dsscustomers"/>
            <field name="groups" eval="[(4, ref('dsscustomers.group_dsscustomers_processing_user'))]" />
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
         <record id="rule_dss_dsscustomers_user_daotao" model="ir.rule">
            <field name="name">Ruler DSS Đào tạo</field>
            <field name="model_id" ref="model_dsscustomers_dsscustomers"/>
            <field name="groups" eval="[(4, ref('dsscustomers.group_dsscustomers_daotao_user'))]" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>

           <record id="rule_dss_dsscustomers_manager" model="ir.rule">
            <field name="name">DSS customers manager</field>
            <field name="model_id" ref="model_dsscustomers_dsscustomers"/>
            <field name="groups" eval="[(4, ref('group_dsscustomers_manager'))]" />
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>


