<odoo>
  <data>

<!-- Form view Processing work-->
  <record model="ir.ui.view" id="view_dsscustomers_coursework_form">
      <field name="name">dsscustomers.coursework.form</field>
      <field name="model">dsscustomers.coursework</field>
      <field name="arch" type="xml">
               <form string="Course">
                    <header/>
                    <sheet>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <group>
                            <field name="name" />
                            <field name="code" />
                        </group>

                        <group colspan="4" col="4" name="main">

                            <!-- <field name="evaluation_type"/> -->
                            <field name="parent_id"/>
                            <!-- <field name="min_unit_load"/>
                            <field name="max_unit_load"/> -->
                            <!-- <field name="department_id" groups="openeducat_core.group_multi_department"/> -->
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
      </field>
    </record>

    <!-- list view Processing nghe -->
    <record model="ir.ui.view" id="view_dsscustomers_coursework_tree">
      <field name="name">dsscustomers.coursework.tree</field>
      <field name="model">dsscustomers.coursework</field>
      <field name="arch" type="xml">
             <tree string="coursework">
                    <field name="name"/>
                    <field name="code"/>
                    <!-- <field name="evaluation_type"/> -->
                    <field name="parent_id"/>
                    <!-- <field name="min_unit_load" optional="hide"/>
                    <field name="max_unit_load" optional="hide"/> -->
                </tree>
      </field>
    </record>
<!-- pivot -->
       <record id="view_customer_coursework_pivot" model="ir.ui.view">
            <field name="name">dsscustomers.coursework.pivot</field>
            <field name="model">dsscustomers.coursework</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <pivot string="coursework">
                    <field name="name" type="row"/>
                    <field name="parent_id"/>
                    <!-- <field name="max_unit_load"/>
                    <field name="min_unit_load"/> -->
                </pivot>
            </field>
        </record>
    <!-- Search -->
        <record id="view_customers_coursework_filter" model="ir.ui.view">
            <field name="name">dsscustomers.coursework.search</field>
            <field name="model">dsscustomers.coursework</field>
            <field name="arch" type="xml">
                <search string="coursework">
                    <field name="name"/>
                    <field name="code"/>
                    <!-- <field name="evaluation_type"/> -->
                    <field name="parent_id"/>
                    <!-- <field name="department_id"/> -->
                    <newline/>
                    <group expand="0" string="Group By...">
                        <!-- <filter name="group_by_evaluation_type"
                                string="Evaluation Type" domain="[]"
                                context="{'group_by':'evaluation_type'}"/> -->
                        <filter name="group_by_partner_coursework"
                                string="Parent Course" domain="[]"
                                context="{'group_by':'parent_id'}"/>
                        <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    </group>
                </search>
            </field>
        </record>


   <!-- Action-->
   <record model="ir.actions.act_window" id="action_dsscustomers_coursework">
      <field name="name">Khóa học</field>
      <field name="res_model">dsscustomers.coursework</field>
      <field name="view_mode">tree,form,pivot</field>
    </record>

<!-- Menu-->
 <menuitem name="Khóa học"
                id="dsscustomers_menu_work_1"
                parent="dsscustomers_menu_5"
                action="action_dsscustomers_coursework"
                groups="dsscustomers.group_dsscustomers_daotao_user"/>

  </data>
</odoo>