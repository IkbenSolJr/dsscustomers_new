                        <filter string="Quốc gia book" name="quocgiabook" context="{'group_by':'quocgiabook'}"/>
                        <filter string="Trạng thái CS" name="trangthaics" context="{'group_by':'trangthaics'}"/>
                    </group>
                </search>
            </field>
        </record>

